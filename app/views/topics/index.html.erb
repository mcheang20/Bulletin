<h1 class="title-all">Bulletin Topics</h1>
<div class="container topics-index">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
            <small> submitted <%= time_ago_in_words(topic.created_at) %> ago </small>
          </h4>
          <small>
            <%= topic.description.truncate_words(15) %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
   <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
