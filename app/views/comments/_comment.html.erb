<div class="comment-body">
  <strong><%= link_to comment.user.name, user_path(comment.user) %></strong> commented <%= time_ago_in_words(comment.created_at) %> ago
  <% if user_is_authorized_for_comment?(comment) %>
    | <%= link_to "Delete", [comment.post, comment], method: :delete, remote: true %>
  <% end %>
  <p><%= comment.body %></p>
</div>
