<nav class="navbar <%= yield(:nav_style) %>">
  <ul>
    <%= link_to image_tag("logo.png"), root_path %>
    <%= link_to "Topics", topics_path %>
    <%= link_to "About", about_path %>
    <%= link_to "Share", new_topic_path %>
  </ul>
  <div class="search-bar">
    <%= form_tag(topics_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
      <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
    <% end %>
  </div>
  <div class="user-info">
    <% if current_user %>
      <li class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%=image_tag current_user.avatar_url(48), class: "gravatar" %></li>
      <ul class="dropdown-menu pull-right">
       <li><%= link_to current_user.name, user_path(current_user) %></li>
       <li><%= link_to "Sign Out", session_path(current_user), method: :delete %></li>
     </ul>
      <% else %>
      <div class="user-session">
        <%= link_to "Log In", new_session_path, class: 'btn '%>
        <%= link_to "Sign Up", new_user_path, class: 'btn' %>
      </div>
      <% end %>
  </div>
</nav>
