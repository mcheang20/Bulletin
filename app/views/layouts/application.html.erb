<!DOCTYPE html>
<html>
<head>
  <title>Bulletin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar">
      <ul class="nav-links">
        <li><%= link_to image_tag("logo.png"), root_path %></li>
        <li><%= link_to "Topics", topics_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
          <div class="user-info">
            <% if current_user %>
              <li class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%=image_tag current_user.avatar_url(48), class: "gravatar" %></li>
              <ul class="dropdown-menu pull-right">
               <li><%= link_to current_user.name, user_path(current_user) %></li>
               <li><%= link_to "Sign Out", session_path(current_user), method: :delete %></li>
             </ul>
              <% else %>
              <div class="user-session">
                <%= link_to "Log In", new_session_path, class: 'btn '%>
                <%= link_to "Sign Up", new_user_path, class: 'btn' %>
              </div>
              <% end %>
          </div>
        </ul>
      </nav>
    </div>
    <div>
      <% if flash[:notice] %>
         <div class="alert-wrapper">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert-wrapper">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert-wrapper">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>
     </div>
    <%= yield %>

    <%= render 'layouts/footer' %>
</body>
</html>
